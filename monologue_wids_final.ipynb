      "source": [
        "import random\n",
        "\n",
        "# Parameters\n",
        "SAMPLE_SIZE = 10_000     # increased for better conversational quality\n",
        "RANDOM_SEED = 42\n",
        "\n",
        "# Draw the sample\n",
        "random.seed(RANDOM_SEED)\n",
        "sample_pairs = random.sample(pairs, SAMPLE_SIZE)\n",
        "\n",
        "print(f\"Sampled {len(sample_pairs)} pairs.\")\n"
      ]
    },
